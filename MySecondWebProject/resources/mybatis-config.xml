<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<typeAliases>
		<typeAlias type="com.kh.mfw.member.model.dto.MemberDTO" alias="memberDTO"/>
	</typeAliases>

	<!--  
		environments : MyBatis를 이용해서 우리가 연동할 DBMS의 정보를 등록하는 태그
	-->
	<environments default="development">
		<environment id="development">
			<!-- 
				* transactioniManager : 트랜잭션관련해서 어떻게 작업을 처리할 것인지
				  - JDBC 	: 트랜잭션을 개발자가 직접관리하겠다. <수동 commit>
				  - MANAGED : 개발자가 트랜잭션에 대해 어떤 영향도 끼치지 않겠다. <자동 commit>
			 -->
			<transactionManager type="JDBC"/>
			
			
			<!--  
				* dataSource의 type 속성은 POOLED랑 UNPOOLED 중 하나 선택해서 작성
				Connection Pool : Connection 객체를 담아둘 수 있는 영역, 한 번 생성된 Connection 을 재사용
				
				POOLED	 : 사용!
				UNPOOLED : 사용 안함
				
				보편적으로는 사용함
			-->
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
				<property name="url" value="jdbc:oracle:thin:@112.221.156.34:12345:xe"/>
				<property name="username" value="KH12_PTH"/>
				<property name="password" value="KH1234"/>
			</dataSource>
			
		</environment>
		
	</environments>
	
	<!-- mappers : 실행할 SQL문을 기록해둔 mapper 파일을 등록 -->
	<mappers>
		<mapper resource="/mappers/member-mapper.xml"/>
	</mappers>

	<!-- typeAliases : 자바타입 별칭 짓기 -->
</configuration>